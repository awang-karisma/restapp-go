HTTP_ADDR=:8080

# Database driver: sqlite3 (default) or postgres/pgx
DATABASE_DRIVER=sqlite3

# SQLite DSN example (default). Keep _foreign_keys=on.
# For Postgres, use a standard URL, e.g. postgres://user:pass@host:5432/dbname?sslmode=disable
DATABASE_DSN=file:whatsapp.db?_foreign_keys=on

# Optional: preconfigure webhook URL to receive incoming message events
WEBHOOK_URL=
